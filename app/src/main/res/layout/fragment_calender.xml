<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CalenderFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/fragment" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="35dp"
        android:text="Match Schedule"
        android:textSize="25sp"
        android:textColor="@color/white"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/white">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            app:mcv_showOtherDates="all"

            app:mcv_selectionColor="#AAAAAA" />

        <androidx.cardview.widget.CardView
            android:id="@+id/eventCardView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@id/calendarView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/DefaultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Nothing on Today"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/matchDayText"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="2023-12-07"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:visibility="visible"
                ></TextView>

            <TextView
                android:id="@+id/homeTeamNotiText"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Home Team: "
                android:textSize="16dp"
                android:visibility="visible"
                ></TextView>

            <TextView
                android:id="@+id/homeTeamText"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="46dp"
                android:textAlignment="center"
                android:textColor="@color/Gold"
                android:text="Tottenham"
                android:textSize="20dp"
                android:visibility="visible"
                ></TextView>
            <ImageView
                android:id="@+id/team1Img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/ic_arsenal"
                android:visibility="visible"
                ></ImageView>

            <ImageView
                android:id="@+id/team2Img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="200dp"
                android:src="@drawable/ic_tottenham"
                android:visibility="visible"
                ></ImageView>

            <TextView
                android:id="@+id/team1Text"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="170dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="arsenal"
                android:textSize="16dp"
                android:visibility="visible"
                ></TextView>

            <TextView
                android:id="@+id/team2Text"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="170dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Tottenham"
                android:textSize="16dp"
                android:visibility="visible"
                ></TextView>
            

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

